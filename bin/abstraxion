#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.expand_path(File.join(File.dirname(__FILE__),".." , "lib")))
require 'abstraxion'
include Abstraxion

ASSET_SIZE = 100
NODE_SIZE = 100.0
WINDOW_H = 700
WINDOW_W = 1200
FACTOR = NODE_SIZE/ASSET_SIZE

class Game < Chingu::Window
  def initialize

    # Set media directory
    media_dir = File.expand_path(File.join('media'))
    Image.autoload_dirs.unshift File.join(media_dir, 'images')

    # Set window size and not full screen
    super(WINDOW_W, WINDOW_H, false)

    # Set globals
    $size = FACTOR
    $node_size = NODE_SIZE * $size

    # Initialize game
    $game = GameWrapper::GameObj.new
    $tower_cells = $game.tower_cells
    $generator = $game.generator
    $map = $game.map
    $tower1 = $game.tower1
    $tower2 = $game.tower2
    $tower3 = $game.tower3
    $tower4 = $game.tower4
    $tower5 = $game.tower5
    $tower = $tower1
    $wall = $game.wall

    # Start game state
    push_game_state(Menu)
  end
end

Game.new.show

